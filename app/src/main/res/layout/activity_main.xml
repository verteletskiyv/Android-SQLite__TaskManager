<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_reversed"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/list_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints="@string/list_name_field"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:hint="@string/list_name_field"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="#505050" />

    <TextView
        android:id="@+id/info_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_name_field"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="@string/info_app"
        android:textColor="#656565"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_app"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:divider="@color/purple_500"
        android:dividerHeight="2dp" />
</RelativeLayout>